{
    "name": "__MSG_extensionName__",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "__MSG_extensionDescription__",
    "default_locale": "en",
    "permissions": ["storage"],
    "host_permissions": ["https://i.ytimg.com/*"],
    "background": {
        "service_worker": "background.bundle.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png"
        }
    },
    "options_ui": {
        "open_in_tab": true,
        "page": "settings.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["contentscript/index.bundle.js"],
            "css": [
                "contentscript/extraOptions.css",
                "contentscript/dialog.css",
                "contentscript/common.css"
            ],
            "all_frames": false
        },
        {
            "matches": ["https://gemini.google.com/*"],
            "js": ["contentscript/gemini.bundle.js"]
        },
        {
            "matches": ["https://chatgpt.com/*"],
            "js": ["contentscript/chatgpt.bundle.js"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
