{
    "name": "YouTube Summary with ChatGPT",
    "version": "1.0.4",
    "manifest_version": 3,
    "description": "Use ChatGPT to summarize YouTube videos",
    "permissions": ["storage"],
    "background": {
        "service_worker": "background.bundle.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "48": "images/48.png"
        }
    },
    "options_ui": {
        "open_in_tab": true,
        "page": "settings.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["contentscript/index.bundle.js"],
            "css": [
                "contentscript/yt_ai_summary.css",
                "contentscript/dialog.css"
            ],
            "all_frames": false
        },
        {
            "matches": ["https://gemini.google.com/*"],
            "js": ["contentscript/gemini.bundle.js"]
        },
        {
            "matches": ["https://chatgpt.com/*"],
            "js": ["contentscript/chatgpt.bundle.js"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "icons": {
        "48": "images/48.png"
    }
}
